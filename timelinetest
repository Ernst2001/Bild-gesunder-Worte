<script src="https://cdn.jsdelivr.net/npm/panzoom@9.4.0/dist/panzoom.min.js"></script>
<script>
document.addEventListener("DOMContentLoaded", () => {
  document.body.style.opacity = "1";

  // === Timeline images ===
  const timeline = document.getElementById("timeline");
  const imageCount = 14;
  for (let i=1; i<=imageCount; i++) {
    const img=document.createElement("img");
    img.src=`timeline_${i}.jpg`;
    img.alt=`Timeline Bild ${i}`;
    timeline.appendChild(img);
  }

  const panZoom = Panzoom(timeline, {
    maxScale: 4,
    minScale: 1,
    contain: "outside",
  });
  const wrapper=document.getElementById("timeline-wrapper");
  wrapper.addEventListener("wheel", panZoom.zoomWithWheel);
  wrapper.addEventListener("mousedown",()=>wrapper.style.cursor="grabbing");
  wrapper.addEventListener("mouseup",()=>wrapper.style.cursor="grab");

  window.setView = function(index){
    const imgWidth=timeline.querySelector("img").getBoundingClientRect().width;
    const offsetX = -(index-1)*imgWidth*0.7;
    panZoom.pan(offsetX,0);
    panZoom.zoom(1);
  };

  // === Accordion click behavior ===
  const headers = document.querySelectorAll(".accordion-header");
  headers.forEach(header => {
    header.addEventListener("click", () => {
      const content = header.nextElementSibling;
      content.style.display = content.style.display === "block" ? "none" : "block";
    });
  });
});
</script>

