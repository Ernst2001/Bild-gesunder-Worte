<!DOCTYPE html>
<html lang="de">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Fakten statt Mythen: Die Geschichte im Zeitstrahl</title>
<style>
body {
  margin: 0;
  font-family: Arial, sans-serif;
  background: linear-gradient(120deg, #a2c1d8, #c3d9e8);
  color: #fff;
  overflow-x: hidden;
}

header {
  text-align: center;
  padding: 30px;
}

header h1 {
  margin: 0;
  font-size: 2.5em;
}

header p {
  margin-top: 10px;
  font-size: 1.2em;
  color: #f0f0f0;
}

#timeline-wrapper {
  width: 100%;
  height: 91vh; /* Höhe um 30% erhöht */
  overflow: hidden;
  position: relative;
  cursor: grab;
  margin: 20px 0;
  border: 1px solid rgba(255,255,255,0.2);
}

#timeline {
  display: flex;
  height: 130%; /* Höhe der Bilder um 30% erhöht */
  transform-origin: 0 0;
  user-select: none;
}

#timeline img {
  height: 100%;
  margin: 0;
  padding: 0;
  display: block;
  flex-shrink: 0;
  object-fit: cover;
  user-drag: none;
  -webkit-user-drag: none;
  -moz-user-drag: none;
  -ms-user-drag: none;
  pointer-events: all;
}

#controls {
  text-align: center;
  margin: 10px;
}

#controls button {
  background-color: #0070ba;
  color: #fff;
  border: none;
  padding: 10px 20px;
  margin: 5px;
  border-radius: 5px;
  cursor: pointer;
}

footer {
  padding: 20px;
  text-align: center;
  background: rgba(0,0,0,0.3);
}

footer a, footer button {
  color: #fff;
  text-decoration: none;
  margin: 5px;
}

footer button {
  background-color: #0070ba;
  border: none;
  padding: 10px 20px;
  cursor: pointer;
  border-radius: 5px;
}
</style>
</head>
<body>

<header>
  <h1>Fakten statt Mythen: Die Geschichte im Zeitstrahl</h1>
  <p>Eine Übersicht, die vergleichen lässt und Wahrheit ans Licht bringt</p>
</header>

<div id="controls">
  <button onclick="resetTimeline()">Ansicht zurücksetzen</button>
</div>

<div id="timeline-wrapper">
  <div id="timeline">
    <img src="images/Seite1.png" alt="Seite 1">
    <img src="images/Seite2.png" alt="Seite 2">
    <img src="images/Seite3.png" alt="Seite 3">
    <img src="images/Seite4.png" alt="Seite 4">
    <img src="images/Seite5.png" alt="Seite 5">
    <img src="images/Seite6.png" alt="Seite 6">
    <img src="images/Seite7.png" alt="Seite 7">
    <img src="images/Seite8.png" alt="Seite 8">
    <img src="images/Seite9.png" alt="Seite 9">
    <img src="images/Seite10.png" alt="Seite 10">
    <img src="images/Seite11.png" alt="Seite 11">
    <img src="images/Seite12.png" alt="Seite 12">
    <img src="images/Seite13.png" alt="Seite 13">
    <img src="images/Seite14.png" alt="Seite 14">
    <img src="images/Seite15.png" alt="Seite 15">
    <img src="images/Seite16.png" alt="Seite 16">
    <img src="images/Seite17.png" alt="Seite 17">
  </div>
</div>

<footer>
  <p>Hinweis: Bei Fragen und Anregungen gerne an <a href="mailto:bildgesunderworte@gmail.com">bildgesunderworte@gmail.com</a> schreiben.</p>
  <button onclick="window.open('https://www.paypal.com/donate','_blank')">Spenden</button>
</footer>

<script>
const wrapper = document.getElementById('timeline-wrapper');
const timeline = document.getElementById('timeline');

let isDragging = false;
let startX = 0;
let startY = 0;
let translateX = 0;
let translateY = 0;
let targetTranslateX = 0;
let targetTranslateY = 0;
let scale = 1;
let targetScale = 1;

// Verhindert Standard-Drag für Bilder
timeline.querySelectorAll('img').forEach(img => img.ondragstart = () => false);

// Maus Drag
wrapper.addEventListener('mousedown', (e) => {
  isDragging = true;
  startX = e.clientX - targetTranslateX;
  startY = e.clientY - targetTranslateY;
  wrapper.style.cursor = 'grabbing';
});

document.addEventListener('mouseup', () => {
  isDragging = false;
  wrapper.style.cursor = 'grab';
});

document.addEventListener('mousemove', (e) => {
  if(!isDragging) return;
  targetTranslateX = e.clientX - startX;
  targetTranslateY = e.clientY - startY;
  applyBounds();
});

// Zoom per Mausrad
wrapper.addEventListener('wheel', (e) => {
  e.preventDefault();
  const rect = timeline.getBoundingClientRect();
  const offsetX = e.clientX - rect.left;
  const offsetY = e.clientY - rect.top;

  const zoomFactor = 1 - e.deltaY * 0.0015;
  targetScale = Math.min(Math.max(0.1, targetScale * zoomFactor), 8);

  // Zoom um Mausposition
  targetTranslateX -= (offsetX / scale - offsetX / targetScale);
  targetTranslateY -= (offsetY / scale - offsetY / targetScale);

  applyBounds();
});

// Grenzen anwenden
function applyBounds() {
  const bounds = {
    width: timeline.scrollWidth * targetScale,
    height: timeline.scrollHeight * targetScale
  };
  const wrapperRect = wrapper.getBoundingClientRect();

  if(bounds.width < wrapperRect.width) {
    targetTranslateX = (wrapperRect.width - bounds.width)/2;
  } else {
    targetTranslateX = Math.min(0, Math.max(wrapperRect.width - bounds.width, targetTranslateX));
  }

  if(bounds.height < wrapperRect.height) {
    targetTranslateY = (wrapperRect.height - bounds.height)/2;
  } else {
    targetTranslateY = Math.min(0, Math.max(wrapperRect.height - bounds.height, targetTranslateY));
  }
}

// Tweening Animation
function animate() {
  scale += (targetScale - scale) * 0.2;
  translateX += (targetTranslateX - translateX) * 0.2;
  translateY += (targetTranslateY - translateY) * 0.2;
  timeline.style.transform = `translate(${translateX}px, ${translateY}px) scale(${scale})`;
  requestAnimationFrame(animate);
}
animate();

// Reset-Funktion
function resetTimeline() {
  targetScale = 1;
  const wrapperRect = wrapper.getBoundingClientRect();
  const targetImg = timeline.children[9]; // Blatt 10
  const imgRect = targetImg.getBoundingClientRect();

  targetTranslateX = wrapperRect.width/2 - (imgRect.left + imgRect.width/2);
  targetTranslateY = wrapperRect.height/2 - (imgRect.top + imgRect.height/2);

  applyBounds();
}

// Initial Ansicht
window.onload = resetTimeline;
</script>

</body>
</html>
