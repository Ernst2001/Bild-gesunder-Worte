<!DOCTYPE html>
<html lang="de">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Fakten statt Mythen</title>
<style>
html, body {
  margin: 0;
  padding: 0;
  font-family: Arial, sans-serif;
  background: linear-gradient(135deg, #8fbcd4, #f5e6c8);
  color: #ffffff;
  overflow-x: hidden;
  user-select: none;
}

h1 { margin-top: 30px; font-size: 2.2em; text-align: center; text-shadow: 1px 1px 4px rgba(0,0,0,0.5); }
h2 { margin-top: 10px; font-size: 1.2em; font-weight: normal; text-align: center; text-shadow: 1px 1px 3px rgba(0,0,0,0.3); }
p { max-width: 700px; margin: 15px auto; line-height: 1.5; text-align: center; text-shadow: 0.5px 0.5px 2px rgba(0,0,0,0.3); }

.timeline-wrapper {
  position: relative;
  width: 100%;
  height: 80vh;
  overflow: hidden;
  cursor: grab;
  margin-top: 20px;
}

.timeline {
  display: flex;
  height: 100%;
  overflow-x: auto;
  overflow-y: hidden;
  scroll-behavior: smooth;
  transform-origin: 0 0;
  transition: transform 0.2s ease;
}

.timeline img {
  height: 100%;
  flex-shrink: 0;
  object-fit: cover;
  margin: 0;
}

.arrow {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  font-size: 3em;
  color: rgba(255,255,255,0.7);
  cursor: pointer;
  user-select: none;
  z-index: 10;
  padding: 10px;
}
.arrow:hover { color: #ffd700; }
.arrow-left { left: 10px; }
.arrow-right { right: 10px; }

.buttons { margin: 30px 0; text-align: center; }
.buttons a {
  background: linear-gradient(135deg, #ffb347, #ffcc70);
  color: #1a1a1a;
  padding: 12px 22px;
  margin: 5px;
  text-decoration: none;
  border-radius: 8px;
  font-weight: bold;
  transition: all 0.3s ease;
  box-shadow: 0 4px 10px rgba(0,0,0,0.3);
  display: inline-block;
}
.buttons a:hover {
  background: linear-gradient(135deg, #ffcc70, #ffb347);
  box-shadow: 0 6px 14px rgba(0,0,0,0.4);
}

.contact { margin: 20px 20px; font-size: 1em; color: #ffffff; text-align: center; text-shadow: 0.5px 0.5px 2px rgba(0,0,0,0.3); }
.contact a { color: #ffd700; text-decoration: underline; }

@media (max-width: 768px) {
  h1 { font-size: 1.8em; }
  h2 { font-size: 1em; }
  p { font-size: 0.9em; padding: 0 10px; }
  .arrow { font-size: 2em; }
}
</style>
</head>
<body>

<h1>Fakten statt Mythen: Die Geschichte im Zeitstrahl</h1>
<h2>Eine Übersicht, die vergleichen lässt und Wahrheit ans Licht bringt</h2>
<p>Scrollen Sie horizontal mit Pfeilen, Maus/Trackpad oder Drag & Drop und zoomen Sie hinein (Strg + Mausrad / Pinch-Geste). Alle Ränder sind sichtbar.</p>

<div class="timeline-wrapper">
  <div class="arrow arrow-left" onclick="scrollTimeline(-1)">&#10094;</div>
  <div class="timeline" id="timeline"></div>
  <div class="arrow arrow-right" onclick="scrollTimeline(1)">&#10095;</div>
</div>

<div class="buttons">
  <a href="https://www.paypal.com/donate?hosted_button_id=DEINE_BUTTON_ID" target="_blank">Jetzt Spenden</a>
</div>

<div class="contact">
  <p>Hinweis: Bei Fragen und Anregungen gerne an <a href="mailto:bildgesunderworte@gmail.com">bildgesunderworte@gmail.com</a> schreiben.</p>
</div>

<script>
const timeline = document.getElementById('timeline');
const imageFiles = [
  "images/Seite1.png","images/Seite2.png","images/Seite3.png",
  "images/Seite4.png","images/Seite5.png","images/Seite6.png",
  "images/Seite7.png","images/Seite8.png","images/Seite9.png",
  "images/Seite10.png","images/Seite11.png","images/Seite12.png",
  "images/Seite13.png","images/Seite14.png","images/Seite15.png",
  "images/Seite16.png","images/Seite17.png"
];

// Funktion: Weißrand automatisch entfernen
function loadImageTrimmed(src) {
  return new Promise((resolve) => {
    const img = new Image();
    img.src = src;
    img.onload = () => {
      const canvas = document.createElement('canvas');
      const ctx = canvas.getContext('2d');
      canvas.width = img.width;
      canvas.height = img.height;
      ctx.drawImage(img, 0, 0);

      const imageData = ctx.getImageData(0, 0, canvas.width, canvas.height);
      const data = imageData.data;

      let left = canvas.width, right = 0;
      for(let x=0; x<canvas.width; x++){
        for(let y=0; y<canvas.height; y++){
          const index = (y * canvas.width + x) * 4;
          if(!(data[index] > 240 && data[index+1] > 240 && data[index+2] > 240)){
            left = Math.min(left, x);
            right = Math.max(right, x);
          }
        }
      }

      const trimmedCanvas = document.createElement('canvas');
      const trimmedCtx = trimmedCanvas.getContext('2d');
      trimmedCanvas.width = right-left+1;
      trimmedCanvas.height = canvas.height;
      trimmedCtx.drawImage(canvas, left, 0, right-left+1, canvas.height, 0, 0, right-left+1, canvas.height);

      const trimmedImg = new Image();
      trimmedImg.src = trimmedCanvas.toDataURL();
      trimmedImg.style.height = "100%";
      trimmedImg.style.flexShrink = 0;
      resolve(trimmedImg);
    };
  });
}

// Alle Bilder laden und Timeline befüllen
async function loadTimeline() {
  for(const file of imageFiles){
    const img = await loadImageTrimmed(file);
    timeline.appendChild(img);
  }
}
loadTimeline();

// Pfeile scrollen Timeline
function scrollTimeline(direction) {
  timeline.scrollBy({ left: direction * 200, behavior: 'smooth' });
}

// Drag-to-scroll
let isDown = false, startX, scrollLeft;
timeline.addEventListener('mousedown', (e) => {
  isDown = true;
  startX = e.pageX - timeline.offsetLeft;
  scrollLeft = timeline.scrollLeft;
  timeline.style.cursor = 'grabbing';
});
timeline.addEventListener('mouseleave', () => { isDown = false; timeline.style.cursor = 'grab'; });
timeline.addEventListener('mouseup', () => { isDown = false; timeline.style.cursor = 'grab'; });
timeline.addEventListener('mousemove', (e) => {
  if(!isDown) return;
  e.preventDefault();
  const x = e.pageX - timeline.offsetLeft;
  const walk = (startX - x); 
  timeline.scrollLeft = scrollLeft + walk;
});

// Zoom relativ zur Maus
let scale = 1;
timeline.addEventListener('wheel', (e) => {
  if(e.ctrlKey) {
    e.preventDefault();
    const rect = timeline.getBoundingClientRect();
    const offsetX = e.clientX - rect.left;
    const originX = offsetX / scale;
    scale += e.deltaY * -0.0015;
    scale = Math.min(Math.max(0.5, scale), 5);
    timeline.style.transformOrigin = `${originX}px 0px`;
    timeline.style.transform = `scale(${scale})`;
  }
});

// Touch Pinch-Zoom für Mobile
let initialDistance = null;
timeline.addEventListener('touchmove', (e) => {
  if(e.touches.length === 2) {
    e.preventDefault();
    const t1 = e.touches[0], t2 = e.touches[1];
    const distance = Math.hypot(t2.pageX - t1.pageX, t2.pageY - t1.pageY);
    if(initialDistance !== null){
      let zoom = distance / initialDistance;
      let newScale = Math.min(Math.max(0.5, scale * zoom), 5);
      timeline.style.transform = `scale(${newScale})`;
    }
    initialDistance = distance;
  }
}, { passive: false });
timeline.addEventListener('touchend', (e) => { if(e.touches.length < 2) initialDistance = null; });

window.addEventListener('load', () => { timeline.scrollLeft = 0; });
</script>

</body>
</html>
